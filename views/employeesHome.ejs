<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>hello employees</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
    <h3>Hallo Employee :)</h3>
    <h5>Grab your Job</h5>
    <hr>
    <h3>List Job yang diambil</h3>
    
    
    <hr>
    <h3>List Jobs Available</h3>
    <br>
    <% if (jobs.length === 0){ %>
        <h3>No Jobs for You Now</h3>
    <% } else { %>
        <table border="1">
                <thead>
                    <tr>
                        <td>Job Id</td>
                        <td>Job Name</td>
                        <td>Type</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
        <% jobs.forEach(job => { %>
            <tr>
                <td><%= job.id %></td>
                <td><%= job.name %></td>
                <td><%= job.type %></td>
                <td>
                    <a href="/employees/grabJob/<%= job.id %>">Grab Job</a>
                </td>
            </tr>
    <% }) %>
    <% } %>
        </tbody>
    </table>
</body>
</html>
